<?xml version='1.0'?>
<config
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:noNamespaceSchemaLocation='urn:magento:module:Df_Config:etc/system_file.xsd'
>
	<system>
<!-- 2015-07-10
The minimal tab `id` length is 3 characters:
https://github.com/magento/magento2/blob/1.0.0-beta/app/code/Magento/Config/etc/system_file.xsd#L405 -->
        <tab id='albumenvy' translate='label' sortOrder='-100'>
            <label>Album Envy</label>
        </tab>
		<section
			id='albumenvy_mediaclip'
			showInDefault='1' showInWebsite='1' showInStore='1'
			translate='label'
		>
			<tab>albumenvy</tab>
			<label>Mediaclip</label>
			<class>separator-top</class>
			<!-- 2015-10-05 https://mage2.pro/t/114 -->
			<resource>AlbumEnvy_Mediaclip::config</resource>
		</section>
	</system>
</config>